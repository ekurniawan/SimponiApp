<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimponiApp.Views.JawabTPage" Title="Jawaban">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lblPertanyaan" FontSize="Large" FontAttributes="Bold" />
            <Editor x:Name="edJawaban" HeightRequest="80" 
                    Placeholder="ketik jawaban disini" />
            <StackLayout Orientation="Horizontal">
                <Button x:Name="btnSubmit" Text="Submit" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>