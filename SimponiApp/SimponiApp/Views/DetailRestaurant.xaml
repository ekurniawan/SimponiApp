<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimponiApp.Views.DetailRestaurant" Title="Detail Restaurant">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Restaurant ID :" />
            <Entry x:Name="txtID" Text="{Binding restaurantid}" IsReadOnly="True" />
            <Label Text="Restaurant Name :" />
            <Entry x:Name="txtName" Text="{Binding namarestaurant}" />
            <Label Text="Category ID :" />
            <Entry x:Name="txtCategoryID" Text="{Binding categoryid}" />
            <StackLayout Orientation="Horizontal">
                <Button x:Name="btnEdit" Text="Edit" />
                <Button x:Name="btnDelete" Text="Delete" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>